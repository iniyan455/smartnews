<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    app:cardElevation="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            tools:ignore="Suspicious0dp">

            <ImageView


                android:id="@+id/news_image" android:layout_width="0dp"
                android:minHeight="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
android:layout_gravity="center_vertical"
android:layout_margin="6dp"
                android:layout_weight="2"
                android:scaleType="centerInside"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">


            <TextView
                android:layout_width="match_parent"
android:id="@+id/source_news_name"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Demo Title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/source_news_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="Demo Category"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:id="@+id/source_news_language"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="Demo Language"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
android:id="@+id/source_news_country"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="Demo Country"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


